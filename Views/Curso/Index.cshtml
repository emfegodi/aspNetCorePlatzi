@model Curso

@{
    ViewData["Title"] = "Información Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>
<h2>@ViewBag.MensajeExtra</h2>

<strong>Desde la vista normal</strong>
<p>
    Nombre : @Model.Nombre <br/>
    Id : @Model.Id <br/>
    Jornada: @Model.Jornada <br/>
    Escuela Id: @Model.EscuelaId <br/>
    @* Nombre Escuela: @Model.Escuela.Nombre *@
</p>

<strong>Desde la vista parcial</strong>
<partial name="ObjetoEscuelaSimple" />


<p><i>@ViewBag.Fecha</i></p>